{
  "name": "ical-gen-app",
  "version": "0.4.0",
  "description": "Consumes JSON containing calendar event data and generates an iCalendar file",
  "keywords": [
    "node",
    "TypeScript",
    "JSON",
    "iCalendar",
    "iCal",
    "ics",
    "generator"
  ],
  "author": "Joe Paquette <paqdev76@protonmail.com>",
  "homepage": "https://github.com/Paqrat76/ical-gen-app/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/Paqrat76/ical-gen-app/issues",
    "email": "paqdev76@protonmail.com"
  },
  "license": "MIT",
  "bin": {
    "iCalGenerator": "./dist/cli.js"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rm -rf tsconfig.tsbuildinfo dist coverage",
    "build": "tsc",
    "postbuild": "mkdir dist/schema && cp src/schema/ical-gen-app-schema.json dist/schema/ical-gen-app-schema.json",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:docs": "markdownlint './**/*.md' -i '**/node_modules/**' -i '**/CHANGELOG.md'",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "test": "jest",
    "coverage": "jest --coverage",
    "jest:clear": "jest --clearCache",
    "gen:schema": "ts-node tools/create-json-schema.ts > src/schema/ical-gen-app-schema.json",
    "prepare": "husky",
    "cli-v": "node dist/cli.js -V",
    "cli-h": "node dist/cli.js -h",
    "cli-s": "node dist/cli.js -s ./test/samples/sample-ical-data.json",
    "cli-sd": "node dist/cli.js -s ./test/samples/sample-ical-data.json -d"
  },
  "overrides": {
    "minimatch": "10.2.4",
    "glob": "13.0.6"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "ajv": "^8.18.0",
    "ajv-formats": "^3.0.1",
    "commander": "^14.0.3",
    "figlet": "^1.10.0",
    "ical-generator": "^10.0.0",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.2",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.15.0",
    "eslint-plugin-jsdoc": "^62.7.1",
    "eslint-plugin-node-import": "^1.2.0",
    "fluent-json-schema": "^6.0.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-circus": "^30.2.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.8.1",
    "rrule": "^2.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.3.0"
  },
  "lint-staged": {
    "*.{json,yaml}": "prettier --write",
    "*.md": [
      "prettier --write",
      "npm run lint:docs"
    ],
    "*.{ts,js,mjs}": [
      "prettier --write",
      "npm run lint -- --max-warnings 0 --no-warn-ignored"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Paqrat76/ical-gen-app.git"
  }
}
